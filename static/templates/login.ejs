<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./Component/Head') %>
</head>
<body>
    <section class="section-login">
        <div class="section-login__welcome">
            <h1>Добро Пожаловать</h1>
            <object  data="assets/img/img_login.svg" type="image/svg+xml"></object>
        </div>
        <div class="section-login__form">
            <div class="section-login__form-content">
                    <div class="form">
                        <label>
                            <p>Логин</p>
                            <input type="text" placeholder="Введите логин" name="login" id="login">
                        </label>
                        <label>
                            <p>Пароль</p>
                            <input type="text" placeholder="Введите пароль" name="password" id="password">
                        </label>

                        <p class="error_login">

                        </p>

                        <button onclick="loginButton()">
                            Авторизоваться
                        </button>

                        <a href="/signin">Нет аккаунта ?</a>
                    </div>
            </div>
        </div>
    </section>

    <script src="../assets/js/login.js"></script>
</body>
</html>